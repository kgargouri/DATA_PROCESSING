{% extends 'admin.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block titre %}Liste des Clients{% endblock %}
{% block btnAction %}<a href="{{ path('app_clients_new') }}" class="btn btn-primary">Ajouter</a>{% endblock %}

{% block body %}
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Client</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Telephone</th>
                <th>Civilite</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.client }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.codePostal }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.civilite }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.nom }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'id': client.id}) }}" class="btn btn-secondary">Afficher</a>
                    <a href="{{ path('app_clients_edit', {'id': client.id}) }}" class="btn btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de clients</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
