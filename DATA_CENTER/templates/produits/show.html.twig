{% extends 'admin.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}
{% block titre %}{{ produit.nom }}{% endblock %}
{% block btnAction %}
<div class="col"><a href="{{ path('app_produits_edit', {'id': produit.id}) }}" class="btn btn-primary">Modifier</a></div>
<div class="col">{{ include('produits/_delete_form.html.twig') }}</div>
{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
            <tr>
                <th>Sous_categorie</th>
                <td>{{ produit.sousCategorie }}</td>
            </tr>
            <tr>
                <th>Cout_unitaire</th>
                <td>{{ produit.coutUnitaire }}</td>
            </tr>
            <tr>
                <th>Prix_unitaire</th>
                <td>{{ produit.prixUnitaire }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
