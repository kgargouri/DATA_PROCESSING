{% extends 'admin.html.twig' %}

{% block title %}Liste des produits{% endblock %}
{% block titre %}Liste des produits{% endblock %}
{% block btnAction %}<a href="{{ path('app_produits_new') }}" class="btn btn-primary">Ajouter</a>{% endblock %}

{% block body %}
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Categorie</th>
                <th>Sous_categorie</th>
                <th>Cout_unitaire</th>
                <th>Prix_unitaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.sousCategorie }}</td>
                <td>{{ produit.coutUnitaire }}</td>
                <td>{{ produit.prixUnitaire }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de produits</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
